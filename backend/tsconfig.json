{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"outDir": "./modules",
		"module": "es2020",
		"moduleResolution": "node",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"strict": true,
	},
	"include": ["./src/**/*"]
}
